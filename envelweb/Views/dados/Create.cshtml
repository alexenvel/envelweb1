@model envelweb.Models.dados

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Lançamento</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="categoria" class="control-label">Categoria</label>
                <input asp-for="categoria" class="form-control" />
                <span asp-validation-for="categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data" class="control-label">Data</label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pagrec" class="control-label">Tipo</label>
                <input asp-for="pagrec" class="form-control" />
                <span asp-validation-for="pagrec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="banco" class="control-label">Banco</label>
                <input asp-for="banco" class="form-control" />
                <span asp-validation-for="banco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor" class="control-label">Valor</label>
                <input asp-for="valor" class="form-control" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="juros" class="control-label">Juros</label>
                <input asp-for="juros" class="form-control" />
                <span asp-validation-for="juros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="desconto" class="control-label">Desconto</label>
                <input asp-for="desconto" class="form-control" />
                <span asp-validation-for="desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nota" class="control-label">Nota</label>
                <input asp-for="nota" class="form-control" />
                <span asp-validation-for="nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
